@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<style>
    /* Center the text */
    p {
        color: white;
        font-size: 30px; 
    }
    
    .image-container {
        max-width: 350px;
        max-height: 350px;
        overflow: hidden;
    }

    .image-container img {
        max-width: 100%;
        height: auto;
        display: block;
    }
</style>
<br>
<br>
<div class="jumbotron">

    <div class="text-center">
        <center>
            <div class="image-container">
                <img src="/logowynd.png" class="img-fluid" alt="...">
            </div>
            <div id="welcome">
                <h1>Software Development Solutions</h1>
                <p style="color:coral;">People Portal</p>
            </div>

            <div id="currentMonthYear"></div>

            <script>
                // Get the current date
                var currentDate = new Date();

                // Get the current month
                var currentMonth = currentDate.toLocaleString('default', { month: 'long' });

                // Get the current year
                var currentYear = currentDate.getFullYear();
                
                // Display the current month and year in the HTML element
                document.getElementById("currentMonthYear").textContent = currentMonth + ' ' + currentYear;
            </script>

            <div class="calendar-container" id="calendarContainer"></div>
            <br>
        </center>

        <div style="display: @Model.logerror !important" class="alert alert-warning alert-dismissible fade show" role="alert">
            <b>Invalid:</b> Username and Passowrd do not match record
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

    </div>
</div>

<div id="logsection" class="jumbotron emplogin">
    <form method="post">
        <center>
            <div class="col-md-6 mb-3">
                <label for="username" class="form-label"><b>Username</b></label>
                <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" placeholder="email" maxlength="64" required>
            </div>
            <div class="col-md-6 mb-3">
                <label for="pswd" class="form-label"><b>Password</b></label>
                <input type="password" class="form-control" id="pswd" name="pswd" placeholder="user password" maxlength="12" required>
            </div>

            <button type="submit" class="btn btn-primary"><b>Log In</b></button>
            <a href="/employeeSignUp" class="btn btn-success">Sign Up</a>
        </center>
    </form>
</div>

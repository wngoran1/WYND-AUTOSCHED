@page
@model Automatic_Scheduling_App.Pages.Schedule_AdjustmentModel
@{
}

<br>
<br>
<div class="jumbotron empdayoff" style="text-align:center">
    <h1>Schedule Adjustment Request</h1>
    <p><b>@Model.message</b></p>
</div>

<br />
<h3>All Pending Requests</h3>
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th scope="col">Employee</th>
            <th scope="col">Date Requested</th>
            <th scope="col">Reason</th>
            <th scope="col">Submitted On</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.record)
        {
            if (user.Item5 == 0)
            {
                <tr>
                    <td>@user.Item1</td>
                    <td>@user.Item2</td>
                    <td>@user.Item3</td>
                    <td>@user.Item3</td>
                </tr>
            }
        }
    </tbody>
</table>
        valueText3.textContent = "Slider 3: " + slider3.value;
        valueText4.textContent = "Slider 4: " + slider4.value;

        var sum = parseInt(slider1.value) + parseInt(slider2.value) + parseInt(slider3.value) + parseInt(slider4.value);
        sumall.textContent = "Total: " + sum;
    });


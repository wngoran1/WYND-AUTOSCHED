    var sumall = document.getElementById("sumall");

    // Add event listeners to both sliders
    slider1.addEventListener("input", function () {

        slider2.max = 100 - slider1.value;
        slider3.max = 100 - slider1.value - slider2.value;
        slider4.value = 100 - slider1.value - slider2.value - slider3.value;

        valueText1.textContent = "Slider 1: " + slider1.value;

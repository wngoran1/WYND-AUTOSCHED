                        <span class="date col-1">@Model.currweek_days[6]</span>
                    </h5>
                    <h4 class="startTime">@Model.currweek_stime[6]</h4>
                    <h4 class="endTime">@Model.currweek_etime[6]</h4>
                </div>

                <div class="w-100"></div> <!-- SECOND WEEK STARTS HERE-->

